<Window x:Class="KoThumb2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KoThumb2"
        mc:Ignorable="d"
        Title="KoThumb2 - 画像リサイズ・変換" Height="750" Width="1000"
        MinHeight="600" MinWidth="900"
        Background="#F8FAFC"
        FontFamily="Segoe UI, Yu Gothic UI"
        AllowDrop="True" Drop="Window_Drop" DragOver="Window_DragOver"
        WindowStartupLocation="CenterScreen"
        Icon="Resources/app-icon.ico"
        Topmost="{Binding IsAlwaysOnTop}">
    
    <Window.Resources>
        <Style TargetType="GroupBox">
            <Setter Property="Margin" Value="0,0,0,16"/>
            <Setter Property="Padding" Value="12"/>
            <Setter Property="BorderBrush" Value="#E2E8F0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="HeaderTemplate">
                <Setter.Value>
                    <DataTemplate>
                        <TextBlock Text="{Binding}" FontWeight="Bold" Foreground="#334155" Margin="4,0,4,4"/>
                    </DataTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <Style TargetType="Button">
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="Background" Value="#FFFFFF"/>
            <Setter Property="BorderBrush" Value="#CBD5E1"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>

        <Style x:Key="PrimaryButton" TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
            <Setter Property="Background" Value="#2563EB"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderThickness" Value="0"/>
        </Style>

        <Style TargetType="Label">
            <Setter Property="Foreground" Value="#475569"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <Style TargetType="TextBox">
            <Setter Property="Padding" Value="6"/>
            <Setter Property="BorderBrush" Value="#CBD5E1"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
        
        <Style TargetType="ComboBox">
            <Setter Property="Padding" Value="6,4"/>
            <Setter Property="BorderBrush" Value="#CBD5E1"/>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="450"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Left: Settings -->
        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            
            <CheckBox Grid.Row="0" Content="常に最前面に表示" IsChecked="{Binding IsAlwaysOnTop}" 
                      Margin="4,0,0,16" FontWeight="SemiBold" Foreground="#475569"/>

            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="0,0,12,0">
            <StackPanel>
                <!-- 1. 入力設定 -->
                <GroupBox Header="1. 入力設定">
                    <StackPanel>
                        <Label Content="入力フォルダ"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBox x:Name="TxtInputFolder" Text="{Binding Settings.InputFolder, UpdateSourceTrigger=PropertyChanged}"
                                     AllowDrop="True" PreviewDragOver="FolderTextBox_PreviewDragOver" PreviewDrop="FolderTextBox_Drop" Tag="Input"/>
                            <Button Grid.Column="1" Content="参照..." Margin="4,0,0,0" Click="BtnBrowseInput_Click"/>
                        </Grid>
                        
                        <CheckBox Content="サブフォルダを含める" Margin="0,8,0,0" IsChecked="{Binding Settings.IncludeSubfolders}"/>
                        
                        <Label Content="対象ファイル (拡張子フィルタ)" Margin="0,8,0,0"/>
                        <ComboBox SelectedIndex="{Binding SelectedExtensionIndex}">
                            <ComboBoxItem Content="すべての対応画像 (*.jpg;*.png;*.webp;...)"/>
                            <ComboBoxItem Content="JPG (*.jpg;*.jpeg)"/>
                            <ComboBoxItem Content="PNG (*.png)"/>
                            <ComboBoxItem Content="WebP (*.webp)"/>
                            <ComboBoxItem Content="BMP (*.bmp)"/>
                            <ComboBoxItem Content="GIF (*.gif)"/>
                        </ComboBox>
                    </StackPanel>
                </GroupBox>

                <!-- 2. 出力設定 -->
                <GroupBox Header="2. 出力設定">
                    <StackPanel>
                        <Label Content="出力フォルダ"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBox x:Name="TxtOutputFolder" Text="{Binding Settings.OutputFolder, UpdateSourceTrigger=PropertyChanged}"
                                     AllowDrop="True" PreviewDragOver="FolderTextBox_PreviewDragOver" PreviewDrop="FolderTextBox_Drop" Tag="Output"/>
                            <Button Grid.Column="1" Content="参照..." Margin="4,0,0,0" Click="BtnBrowseOutput_Click"/>
                        </Grid>
                        
                        <CheckBox Content="同じフォルダ構造を再現" Margin="0,8,0,0" IsChecked="{Binding Settings.ReplicateFolderStructure}"/>
                    </StackPanel>
                </GroupBox>

                <!-- 3. 変換モード -->
                <GroupBox Header="3. 変換モード">
                    <StackPanel Orientation="Horizontal">
                        <RadioButton Content="リサイズ + 変換" IsChecked="{Binding IsResizeMode}" Margin="0,0,16,0"/>
                        <RadioButton Content="フォーマット変換のみ" IsChecked="{Binding IsFormatOnlyMode}"/>
                    </StackPanel>
                </GroupBox>

                <!-- 4. リサイズ設定 -->
                <GroupBox Header="4. リサイズ設定" Visibility="{Binding ResizeGroupVisibility}">
                    <StackPanel>
                        <Label Content="リサイズ基準"/>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                            <RadioButton Content="幅" IsChecked="{Binding IsResizeByWidth}" Margin="0,0,12,0"/>
                            <RadioButton Content="高さ" IsChecked="{Binding IsResizeByHeight}" Margin="0,0,12,0"/>
                            <RadioButton Content="長辺" IsChecked="{Binding IsResizeByLongSide}"/>
                        </StackPanel>
                        
                        <Label Content="指定サイズ (pixel)"/>
                        <TextBox Text="{Binding Settings.TargetSize, UpdateSourceTrigger=PropertyChanged}"/>
                        
                        <Label Content="アルゴリズム" Margin="0,8,0,0"/>
                        <ComboBox SelectedIndex="{Binding SelectedAlgorithmIndex}">
                            <ComboBoxItem Content="Lanczos (最高品質)"/>
                            <ComboBoxItem Content="Bicubic (高品質)"/>
                            <ComboBoxItem Content="Bilinear (標準)"/>
                        </ComboBox>
                    </StackPanel>
                </GroupBox>

                <!-- 5. 出力フォーマット設定 -->
                <GroupBox Header="5. 出力フォーマット設定">
                    <StackPanel>
                        <Label Content="フォーマット"/>
                        <ComboBox SelectedIndex="{Binding SelectedFormatIndex}">
                            <ComboBoxItem Content="JPG"/>
                            <ComboBoxItem Content="PNG"/>
                            <ComboBoxItem Content="WebP"/>
                        </ComboBox>

                        <!-- JPG Settings -->
                        <StackPanel Visibility="{Binding JpegSettingsVisibility}" Margin="0,8,0,0">
                            <Label Content="{Binding JpegQualityLabel}"/>
                            <Slider Minimum="1" Maximum="100" Value="{Binding Settings.JpegQuality}"/>
                            <CheckBox Content="プログレッシブJPG" IsChecked="{Binding Settings.ProgressiveJpeg}" Margin="0,4,0,0"/>
                        </StackPanel>

                        <!-- PNG Settings -->
                        <StackPanel Visibility="{Binding PngSettingsVisibility}" Margin="0,8,0,0">
                            <Label Content="{Binding PngCompressionLabel}"/>
                            <Slider Minimum="0" Maximum="9" Value="{Binding Settings.PngCompressionLevel}"/>
                        </StackPanel>

                        <!-- WebP Settings -->
                        <StackPanel Visibility="{Binding WebpSettingsVisibility}" Margin="0,8,0,0">
                            <Label Content="{Binding WebpQualityLabel}"/>
                            <Slider Minimum="1" Maximum="100" Value="{Binding Settings.WebpQuality}"/>
                            <CheckBox Content="ロスレス" IsChecked="{Binding Settings.WebpLossless}" Margin="0,4,0,0"/>
                        </StackPanel>
                    </StackPanel>
                </GroupBox>

                <!-- 6. ファイル名設定 -->
                <GroupBox Header="6. ファイル名設定">
                    <StackPanel>
                        <RadioButton Content="元のファイル名を維持" IsChecked="{Binding IsFilenameKeep}" Margin="0,0,0,4"/>
                        <RadioButton Content="プレフィックス追加" IsChecked="{Binding IsFilenamePrefix}" Margin="0,0,0,4"/>
                        <TextBox Text="{Binding Prefix, UpdateSourceTrigger=PropertyChanged}" Visibility="{Binding PrefixInputVisibility}" Margin="20,0,0,8"/>
                        
                        <RadioButton Content="サフィックス追加" IsChecked="{Binding IsFilenameSuffix}" Margin="0,0,0,4"/>
                        <TextBox Text="{Binding Suffix, UpdateSourceTrigger=PropertyChanged}" Visibility="{Binding SuffixInputVisibility}" Margin="20,0,0,8"/>

                        <RadioButton Content="連番リネーム" IsChecked="{Binding IsFilenameSerial}" Margin="0,0,0,4"/>
                        <TextBox Text="{Binding SerialPattern, UpdateSourceTrigger=PropertyChanged}" Visibility="{Binding SerialInputVisibility}" Margin="20,0,0,8"/>
                        
                        <Border Background="#F1F5F9" Padding="8" Margin="0,4,0,0" CornerRadius="4">
                            <TextBlock Text="{Binding FilenamePreviewLabel}" Foreground="#475569" FontSize="12" FontFamily="Consolas, Monospace"/>
                        </Border>

                        <Label Content="競合処理" Margin="0,8,0,0"/>
                        <ComboBox SelectedIndex="{Binding SelectedConflictIndex}">
                            <ComboBoxItem Content="自動リネーム (ファイル名(1).jpg)"/>
                            <ComboBoxItem Content="スキップ"/>
                        </ComboBox>
                    </StackPanel>
                </GroupBox>

                <!-- メタデータ設定 -->
                <GroupBox Header="9. その他設定">
                    <StackPanel>
                        <CheckBox Content="EXIF情報を保持する" IsChecked="{Binding Settings.KeepExif}" Margin="0,4,0,0"/>
                        <CheckBox Content="カラープロファイルを保持する" IsChecked="{Binding Settings.KeepColorProfile}" Margin="0,4,0,0"/>
                    </StackPanel>
                </GroupBox>
            </StackPanel>
        </ScrollViewer>
        </Grid>

        <!-- Right: Preview and Execution -->
        <Grid Grid.Column="1" Margin="12,0,0,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Text="処理ステータス" FontWeight="Bold" Foreground="#334155" FontSize="16" Margin="0,0,0,12"/>

            <GroupBox Grid.Row="1" Header="ログ / プレビュー">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="2*"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="3*"/>
                    </Grid.RowDefinitions>
                    
                    <ListBox x:Name="LogList" ItemsSource="{Binding LogItems}" BorderThickness="0" Background="Transparent" 
                             SelectionChanged="LogList_SelectionChanged">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Message}" FontSize="12" Foreground="#475569" Cursor="Hand"/>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>

                    <GridSplitter Grid.Row="1" Height="2" HorizontalAlignment="Stretch" Background="#E2E8F0"/>

                    <Grid Grid.Row="2" Margin="0,8,0,0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                            <TextBlock Text="変換後のイメージ（ログ選択で表示）" VerticalAlignment="Center" FontWeight="SemiBold" Foreground="#475569"/>
                        </StackPanel>
                        <Border Grid.Row="1" Background="White" BorderBrush="#E2E8F0" BorderThickness="1">
                            <Image x:Name="ImgPreview" Source="{Binding PreviewImage}" Stretch="Uniform" Margin="4"/>
                        </Border>
                    </Grid>
                </Grid>
            </GroupBox>

            <StackPanel Grid.Row="2" Margin="0,16,0,0">
                <ProgressBar Height="12" Value="{Binding ProgressValue}" Minimum="0" Maximum="{Binding ProgressMax}" Background="#E2E8F0" Foreground="#3B82F6" BorderThickness="0"/>
                <TextBlock Text="{Binding ProgressText}" HorizontalAlignment="Right" Margin="0,4,0,0" Foreground="#64748B" FontSize="12"/>
            </StackPanel>

            <Grid Grid.Row="3" Margin="0,16,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <Button Content="出力先を開く" HorizontalAlignment="Left" Click="BtnOpenOutput_Click" Visibility="{Binding CompletionVisibility}"/>
                
                <Button Grid.Column="1" Content="キャンセル" Width="100" Margin="0,0,8,0" Click="BtnCancel_Click" IsEnabled="{Binding IsProcessing}"/>
                <Button Grid.Column="2" Style="{StaticResource PrimaryButton}" Content="実行開始" Width="120" Click="BtnStart_Click" IsEnabled="{Binding IsNotProcessing}"/>
            </Grid>
        </Grid>
    </Grid>
</Window>
